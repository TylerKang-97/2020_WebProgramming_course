<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
	<Appenders>
		<Console name="STDOUT">
			<PatternLayout
				pattern="%date{HH:mm:ss} [%thread] %level %logger - %message%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="kr.ac.mjc.shinyoung.springmvc.story" level="debug" additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>